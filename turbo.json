{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },

    "performer#build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**"],
      "env": ["REACT_APP_VERSION", "REACT_APP_SERVER_HOST"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "src/**/*.jsx", "src/**/*.js"]
    },
    "control#build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**"],
      "env": ["REACT_APP_VERSION", "REACT_APP_SERVER_HOST"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "src/**/*.jsx", "src/**/*.js"]
    },

    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  }
}
